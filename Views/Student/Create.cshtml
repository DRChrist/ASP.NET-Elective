@model StudentApplication.Models.Student
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Create Student</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="css/style.css" rel="stylesheet">
    </head>
    <body>
    <h1>Create Student</h1>
    <form action="/Student/Create" method="POST">
        <label asp-for="StudentID"></label>
        <input placeholder="Student ID" asp-for="StudentID">
        <label asp-validation="" ></label>
        <label asp-for="FirstName"></label>
        <input placeholder="First Name" asp-for="FirstName">
        <label asp-for="LastName"></label>
        <input placeholder="Last Name" asp-for="LastName">
        <label asp-for="EnrollmentDate"></label>
        <input placeholder="Enrollment Date" asp-for="EnrollmentDate">
        <input type="submit" value="Send">
    </form>
    <p> </p>
    </body>
</html>