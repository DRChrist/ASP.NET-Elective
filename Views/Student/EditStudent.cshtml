@model StudentApplication.Models.Student
@{
    Layout = "_Layout";
}
<!DOCTYPE>
<html>
<head>
  <title>Edit Student</title>
</head>
<body>
  
      <h1>Edit Student</h1>
    
      <p><a href="~/Student/Index">Return to students</a></p>

        <form asp-controller="Student"  asp-action="EditStudent" method="POST">
        <input class="form-control" type="Hidden" asp-for="StudentID">
        
        <div class="form-group">
        <label asp-for="FirstName"></label>
         <div><input value=@Model.FirstName asp-for="FirstName"></input></div>
        </div>

        <div class="form-group">
        <label asp-for="LastName"></label>
         <div><input value=@Model.LastName asp-for="LastName"></input></div>
        </div>

        <div class="form-group">
        <label asp-for="EnrollmentDate"></label>
         <div><input value=@Model.EnrollmentDate asp-for="EnrollmentDate"></input></div>
        </div>

        <div class="form-group">
        <label asp-for="Age"></label>
         <div><input value=@Model.Age asp-for="Age"></input></div>
        </div>
        <div class="form-group">
            <div>
                <button type="submit" class="btn btn-warning">Accept Change</button>
                <a class="btn btn-info" asp-controller="Student" asp-action="Index">Back to list</a>
            </div>
        </div>
      </form>
    </body>
</html>