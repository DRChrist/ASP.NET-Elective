@model IEnumerable<StudentApplication.Models.Student>
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
    <head>
        <title></title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="css/style.css" rel="stylesheet">
    </head>
    <body class="container">
    <h1 class="jumbotron">Students</h1>
    <a asp-controller="Student" asp-action="Create" class="btn btn-success">New Student</a>        
    <table class="table table-striped" "table-hover" "table-condensed">
        <tr>
        <th>@Html.DisplayNameFor(Models => Models.FirstName)</th>
        <th>@Html.DisplayNameFor(Models => Models.LastName)</th>
        <th>@Html.DisplayNameFor(Models => Models.EnrollmentDate)</th>
        <th>@Html.DisplayNameFor(Models => Models.Age)</th>
        <th>Enrollment</th>
        </tr>
    @foreach(var st in Model)
        {
        <tr>
            <td> @st.FirstName </td>
            <td> @st.LastName </td>
            <td> @st.EnrollmentDate </td>
            <td> @st.Age </td>
            <td>
            <a asp-action="Edit" class="btn btn-primary" asp-route-id=@st.StudentID>Edit</a>
            <a asp-action="DeleteStudent" class="btn btn-danger" asp-route-id=@st.StudentID>Delete</a>
            <a asp-action="Details" class="btn btn-info" asp-route-id=@st.StudentID>Details</a>
            </td>
        </tr>
        } 
    </table>
  
    </body>
</html>